    <groupId>fi.vm.sade</groupId>
    <artifactId>valinta-tulos-service</artifactId>
    <packaging>war</packaging>
    <description>valinta-tulos-service</description>
    <version>0.1.0-SNAPSHOT</version>
    <name>valinta-tulos-service</name>
    <organization>
        <name>fi.vm.sade</name>
    </organization>
    <dependencies>
